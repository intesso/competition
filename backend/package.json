{
  "name": "competition-backend",
  "version": "1.0.0",
  "description": "Backend for the competition system",
  "main": "index.js",
  "scripts": {
    "lint": "eslint .",
    "fix": "eslint . --fix",
    "build": "mkdir -p build &&cp ../frontend/src/lib/reportDefinitions.ts build/",
    "generate": "concurrently 'npm:generate:*'",
    "generate:dbddl": "pg-migrations apply --database postgres://competition:comp1234@localhost:5432/competition --directory src/lib/db-migrations",
    "generate:dbtypes": "npx @databases/pg-schema-cli --database postgres://competition:comp1234@localhost:5432/competition --directory src/lib/db/__generated__",
    "start": "concurrently 'npm:start:*'",
    "start:server": "ts-node server.ts",
    "start:nodered": "ts-node node-red.ts",
    "dev": "concurrently 'npm:dev:*'",
    "dev:server": "nodemon server.ts",
    "dev:nodered": "ts-node node-red.ts",
    "test": "jest",
    "test:data": "ts-node test/integration-test-data.ts",
    "test:integration": "ts-node test/integration-test.ts",
    "test:unit": "jest --coverage=false",
    "restore": "ts-node src/lib/db-tools/restore-raw-points/restore-raw-points.ts ./backup",
    "pm2": "pm2 start npm --name competition -- run start"
  },
  "author": "Andi Neck",
  "license": "MIT",
  "devDependencies": {
    "@databases/pg-migrations": "^5.0.1",
    "@databases/pg-schema-cli": "^4.3.0",
    "@types/google-spreadsheet": "^3.3.0",
    "@types/jest": "^27.5.1",
    "@types/koa": "^2.13.4",
    "@types/koa__cors": "^3.3.0",
    "@types/koa-bodyparser": "^4.3.7",
    "@types/koa-router": "^7.4.4",
    "@types/koa-static": "^4.0.2",
    "@types/lodash": "^4.14.186",
    "@types/luxon": "^3.0.1",
    "@types/node-red": "^1.2.1",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.23.0",
    "@typescript-eslint/parser": "^5.23.0",
    "concurrently": "^7.4.0",
    "eslint": "^8.15.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.2.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-standard": "^5.0.0",
    "jest": "^28.1.0",
    "nodemon": "^2.0.16",
    "supertest": "^6.2.3",
    "ts-jest": "^28.0.2",
    "ts-node": "^10.7.0",
    "ts-standard": "^11.0.0",
    "typescript": "^4.6.4"
  },
  "dependencies": {
    "@databases/pg": "^5.4.1",
    "@databases/pg-typed": "^4.3.0",
    "@google-cloud/local-auth": "^2.1.0",
    "@koa/cors": "^3.3.0",
    "axios": "^0.27.2",
    "csv-parse": "^5.3.0",
    "dotenv": "^16.0.2",
    "express": "^4.18.1",
    "google-spreadsheet": "^3.3.0",
    "googleapis": "^105.0.0",
    "koa": "^2.13.4",
    "koa-bodyparser": "^4.3.0",
    "koa-router": "^10.1.1",
    "koa-static": "^5.0.0",
    "lodash-es": "^4.17.21",
    "luxon": "^3.0.3",
    "newman": "^5.3.2",
    "node-red": "^3.0.2",
    "openapi-validator-middleware": "^3.2.6",
    "uuid": "^9.0.0"
  }
}